<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_layer_useful">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:text="您好！"
                android:textSize="@dimen/textsize_h2"
                android:textColor="@color/useful_orange"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/et_Expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                tools:text="TEST CONTENT\nTEST CONTENT"
                android:textSize="@dimen/textsize_h2"
                android:textColor="@color/textColor_black"
                android:background="@null"/>
            <!--android:background="@drawable/editview_bg_selector"-->

            <TextView
                android:id="@+id/tv_thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@null"
                tools:text="感谢您的支持。"
                android:textSize="@dimen/textsize_h2"
                android:textColor="@color/useful_orange"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_blessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@null"
                tools:text="祝健康！"
                android:textSize="@dimen/textsize_h2"
                android:textColor="@color/useful_orange"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>

    <!--<EditText-->
        <!--android:id="@+id/et_Expression"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:padding="10dp"-->
        <!--android:gravity="top"-->
        <!--android:textColor="@color/black"-->
        <!--android:background="@drawable/editview_bg_selector"/>-->

    <LinearLayout
        android:id="@+id/cbgroup_expression"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
       <Button
           android:id="@+id/btn_hideDialog"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:background="@drawable/useful_btn_unpressed_shape"
           android:layout_margin="5dp"
           android:text="上一页"
           android:textColor="@color/useful_orange"/>

        <!--android:background="@drawable/shape"-->

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/useful_btn_pressed_shape"
            android:layout_margin="5dp"
            android:text="确定"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>