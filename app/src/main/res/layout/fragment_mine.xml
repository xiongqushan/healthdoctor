<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_ee"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:background="@color/main_color_blue">

        <LinearLayout
            android:id="@+id/layout_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_doctorphoto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_launcher"
                fresco:failureImage="@drawable/doctor_default_photourl"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="@color/white"
                fresco:roundingBorderWidth="2dp" />

            <!--<ImageView-->
            <!--android:layout_width="96dp"-->
            <!--android:layout_height="96dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/ic_launcher" />-->

            <TextView
                android:id="@+id/tv_doctorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="医师赵" />

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_basedata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high_44dp"
        android:background="@color/item_press_white_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/actionbar_high_44dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/personal_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本资料"
            android:textColor="@color/subtitle_color66"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_go_into" />


    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_high_44dp"
        android:background="@color/item_press_white_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/actionbar_high_44dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="@color/subtitle_color66"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/btn_go_into" />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerline"
        android:background="@color/divider_d3" />


</LinearLayout>
