<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_reportdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="1"
            android:text="咨询内容"
            android:textColor="@color/gray" />
        <View
            android:id="@+id/split_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/txt_reportdetail_title"
            android:layout_alignBottom="@id/txt_reportdetail_title"
            android:layout_toRightOf="@id/txt_reportdetail_title"
            android:layout_marginLeft="5dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/txt_reportdetail_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/split_line"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:maxLines="5"
            android:scrollbars = "vertical" />
    </RelativeLayout>

</LinearLayout>