<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="haozuo.com.healthdoctor.view.mine.AdviceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="12dp"
            android:background="@drawable/report_item_bg"
            android:hint="请输入你的宝贵意见..."
            android:paddingLeft="12dp"
            android:textCursorDrawable="@drawable/shape_cursor"
            android:textSize="@dimen/txt_title_16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="请留下您的电话或者QQ以便我们及时联系您解决问题"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_high">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="phone"
                android:paddingLeft="112dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/txt_title_16sp" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/subtitle_color66"
                android:textSize="18sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_high">

            <EditText
                android:id="@+id/et_qq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:inputType="number"
                android:paddingLeft="112dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="@dimen/txt_title_16sp" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Q Q"
                android:textColor="@color/subtitle_color66"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <Button
            android:id="@+id/btn_commit_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/report_item_bg_blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>