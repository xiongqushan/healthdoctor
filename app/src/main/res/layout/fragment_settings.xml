<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_bg_ee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerline"
        android:background="@color/divider_d3" />

    <LinearLayout
        android:id="@+id/layout_aboutus"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:text="关于我们" />
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_help"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:text="帮助" />
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_feedback"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:text="意见反馈" />
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_disclaimer"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:text="免责声明" />
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_clearcache"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:text="清空缓存" />
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />

    <LinearLayout
        android:id="@+id/layout_push"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            style="@style/txt_set"
            android:layout_weight="1"
            android:text="消息推送" />


        <haozuo.com.healthdoctor.view.threePart.switchbutton.SwitchButton xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_push"
            style="@style/SwitchButtonStyle"
            android:layout_marginRight="12dp"
            android:checked="true"
            app:onColor="@color/main_color_blue"
            app:thumb_height="20dp"
            app:thumb_width="20dp" />


    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee" />


    <TextView
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_btn_corners_blue"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
