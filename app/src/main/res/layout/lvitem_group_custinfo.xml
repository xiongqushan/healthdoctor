<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_press_white_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/CPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            fresco:roundAsCircle="true" />

        <TextView

            android:id="@+id/txt_Cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/CPhoto"
            android:gravity="center_vertical"
            android:text="张三"
            android:textColor="@color/title_color28"
            android:textSize="@dimen/txt_title_16sp" />

        <TextView
            android:id="@+id/txt_NickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_Cname"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/CBirthday"
            android:layout_toRightOf="@+id/txt_Cname"
            android:text="(昵称)"
            android:textColor="@color/subtitle_color66"
            android:textSize="@dimen/txt_subtitle_14sp" />

        <TextView
            android:id="@+id/Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_Cname"
            android:layout_below="@id/txt_Cname"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="上海好卓数据"
            android:textColor="@color/subtitle_color66"
            android:textSize="@dimen/txt_subtitle_14sp" />

        <TextView
            android:id="@+id/CBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_Cname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="1990-01-01"
            android:textColor="@color/subtitle_colorb2"
            android:textSize="@dimen/txt_subtitle_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerline"
        android:background="@color/divider_d3" />
</LinearLayout>