<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="70dp"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/CPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        fresco:roundAsCircle="true"/>
    <TextView
        android:id="@+id/txt_Cname"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_toRightOf="@id/CPhoto"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        tools:text="张三"/>

    <TextView
        android:id="@+id/txt_NickName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/txt_Cname"
        android:layout_alignBottom="@id/txt_Cname"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/txt_Cname"
        android:gravity="center_vertical"
        tools:text="(昵称)"/>

    <TextView
        android:id="@+id/Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_Cname"
        android:layout_below="@id/txt_Cname"
        tools:text="上海好卓数据"/>
    
    <TextView
        android:id="@+id/CBirthday"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        tools:text="1990-01-01" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>