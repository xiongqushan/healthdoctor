<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                style="@style/txt_set"
                android:text="姓名" />

            <TextView
                android:id="@+id/tvDoctorName"
                style="@style/txt_set"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333AB4F1"
            android:padding="12dp">

            <TextView
                style="@style/txt_set"
                android:text="专长" />

            <TextView
                android:id="@+id/tvDoctorSkill"
                style="@style/txt_set"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                style="@style/txt_set"
                android:text="职称" />

            <TextView
                android:id="@+id/tvDoctorJob"
                style="@style/txt_set"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333AB4F1"
            android:padding="12dp">

            <TextView
                style="@style/txt_set"
                android:text="所属机构" />

            <TextView
                android:id="@+id/tvDoctorWorkUnit"
                style="@style/txt_set"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividerline"
            android:background="@color/divider_d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                style="@style/txt_set"
                android:text="介绍" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDoctorExplain"
            style="@style/txt_set"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_line_corners_blue"
            android:lineSpacingExtra="2dp"
            android:padding="16dp" />


    </LinearLayout>
</FrameLayout>
