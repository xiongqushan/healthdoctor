<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#23CA9E"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

        <TextView
            android:id="@+id/fourthGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:background="#B1E17F"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

        <TextView
            android:id="@+id/fifthGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:background="#F6B6A9"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCenterH"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/secondGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#61C8F1"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

        <TextView
            android:id="@+id/thirdGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:background="#FCCC97"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

        <TextView
            android:id="@+id/sixthGroupName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#59DBD9"
            android:gravity="center"
            android:orientation="vertical"
            android:textSize="@dimen/textsize_h2"
            android:textColor="@color/white"
            tools:text="高血压组\n服务人数:58"/>

    </LinearLayout>

</LinearLayout>


