<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer_photoreport3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/gvitem_photoreport">

    <TextView
        android:id="@+id/tv_Count"
        android:layout_height="73dp"
        android:layout_width="90dp"
        android:layout_gravity="center"
        android:gravity="right|bottom"
        android:padding="8dp"
        tools:text="共5张"
        android:textSize="@dimen/textsize_h5"
        android:textColor="@color/white"
        android:background="@drawable/bg_photo_report" />

    <TextView
        android:id="@+id/tv_PhotoReport_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        tools:text="2016-08-07" />

    <TextView
        android:id="@+id/tv_PhotoReport_Dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="4dp"
        tools:text="河南省直三院河南省直三院河南省直三院12"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end" />

</LinearLayout>