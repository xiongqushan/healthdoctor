<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layer_photoreport1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_Count1"
            android:layout_height="73dp"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:gravity="right|bottom"
            android:padding="8dp"
            tools:text="共5张"
            android:textSize="@dimen/textsize_h5"
            android:textColor="@color/white"
            android:background="@drawable/bg_photo_report"/>

        <TextView
            android:id="@+id/tv_PhotoReport_Date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/PhotoReport_margin"
            tools:text="2016-08-07"/>

        <TextView
            android:id="@+id/tv_PhotoReport_Dept1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/PhotoReport_margin"
            tools:text="河南省直三院"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layer_photoreport2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_Count2"
            android:layout_height="73dp"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:gravity="right|bottom"
            android:padding="8dp"
            tools:text="共5张"
            android:textSize="@dimen/textsize_h5"
            android:textColor="@color/white"
            android:background="@drawable/bg_photo_report"/>

        <TextView
            android:id="@+id/tv_PhotoReport_Date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            tools:text="2016-08-07"/>

        <TextView
            android:id="@+id/tv_PhotoReport_Dept2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="top|center_horizontal"
            android:layout_marginTop="4dp"
            tools:text="河南省直三院"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layer_photoreport3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:showIn="@layout/gvitem_photoreport">

        <TextView
            android:id="@+id/tv_Count3"
            android:layout_height="73dp"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:gravity="right|bottom"
            android:padding="8dp"
            tools:text="共5张"
            android:textSize="@dimen/textsize_h5"
            android:textColor="@color/white"
            android:background="@drawable/bg_photo_report" />

        <TextView
            android:id="@+id/tv_PhotoReport_Date3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            tools:text="2016-08-07" />

        <TextView
            android:id="@+id/tv_PhotoReport_Dept3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="top|center_horizontal"
            android:layout_marginTop="4dp"
            tools:text="河南省直三院河南省直三院河南省直三院12"
            android:maxLines="2"
            android:minLines="2"
            android:ellipsize="end" />

    </LinearLayout>


</LinearLayout>