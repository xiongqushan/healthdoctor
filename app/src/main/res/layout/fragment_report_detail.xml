<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="haozuo.com.healthdoctor.view.custom.ReportDetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listView_report_detail_hide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:divider="@null"
                android:scrollbars="none"
                android:visibility="gone" />

            <View
                android:id="@+id/divider_report_detail"
                android:layout_width="@dimen/dividerline"
                android:layout_height="match_parent"
                android:background="@color/divider_d3" />

            <ListView
                android:id="@+id/listView_report_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null"
                android:scrollbars="none"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgShowHideList"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_orange"
            android:padding="8dp"
            android:src="@drawable/add" />

    </FrameLayout>


</RelativeLayout>
