    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_reportdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="17dp"
            android:ems="1"
            android:text="咨询内容"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_h2"
            android:textStyle="bold"
            android:background="@drawable/bg_useful_title"/>

        <TextView
            android:id="@+id/txt_reportdetail_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_reportdetail_title"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:maxLines="5"
            android:scrollbars = "vertical"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/usefulmessage_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/btn_nextstep"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape"
        android:text="@string/usefulmessage_btn_nextstep"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_h2" />


