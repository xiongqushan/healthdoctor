<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_bg_ee"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerline"
        android:background="@color/divider_d3"/>

    <LinearLayout
        android:id="@+id/layout_aboutus"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/aboutus"/>

        <TextView
            style="@style/txt_set"
            android:text="关于我们"
            android:drawableRight="@drawable/btn_go_into"/>

    </LinearLayout>

    <!--<include layout="@layout/divider_12dp_gray_ee"/>-->

    <LinearLayout
        android:id="@+id/layout_help"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/help"/>

        <TextView
            style="@style/txt_set"
            android:text="帮助"
            android:drawableRight="@drawable/btn_go_into"/>
    </LinearLayout>

    <!--<include layout="@layout/divider_12dp_gray_ee"/>-->

    <LinearLayout
        android:id="@+id/layout_feedback"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/feedback"/>

        <TextView
            style="@style/txt_set"
            android:text="意见反馈"
            android:drawableRight="@drawable/btn_go_into"/>
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee"/>

    <LinearLayout
        android:id="@+id/layout_disclaimer"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/disclaimer"/>

        <TextView
            style="@style/txt_set"
            android:text="免责声明"
            android:drawableRight="@drawable/btn_go_into"/>
    </LinearLayout>

    <!--<include layout="@layout/divider_12dp_gray_ee"/>-->

    <LinearLayout
        android:id="@+id/layout_clearcache"
        style="@style/layout_set">

        <ImageView
            android:layout_width="@dimen/actionbar_high"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/clearcache"/>

        <TextView
            style="@style/txt_set"
            android:text="清空缓存"
            android:drawableRight="@drawable/btn_go_into"/>
    </LinearLayout>

    <include layout="@layout/divider_12dp_gray_ee"/>

    <TextView
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_btn_corners_blue"
        android:gravity="center"
        android:padding="12dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>