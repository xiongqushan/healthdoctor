<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_high"
    android:background="@color/main_color_blue"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">
    <!--android:layout_marginTop="25dp"-->
    <!--android:fitsSystemWindows="true"-->

    <ImageView
        android:id="@+id/btn_go_back"
        android:layout_width="@dimen/actionbar_high"
        android:layout_height="match_parent"
        android:padding="@dimen/actionbar_padding"
        android:src="@drawable/go_back" />

    <TextView
        android:id="@+id/txt_TitleBar_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_high"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="title"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_h1"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/btn_search"
        android:layout_width="@dimen/actionbar_high"
        android:layout_height="match_parent"
        android:padding="@dimen/actionbar_padding"
        android:src="@drawable/search_white"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_Consult"
        android:layout_width="@dimen/actionbar_high"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="咨询"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_h3"
        android:visibility="gone" />

    <haozuo.com.healthdoctor.view.threePart.common.DrawableClickableEditText
        android:id="@+id/et_TitleBar_search"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/editview_bg_selector"
        android:drawableLeft="@drawable/useful_search"
        android:drawableRight="@drawable/useful_cancel"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:hint="请搜索关键词"
        android:textSize="@dimen/textsize_h3"
        android:visibility="gone"/>



</LinearLayout>
